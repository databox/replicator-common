# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 120
quote_type = double
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space

[Makefile]
indent_size = 4
indent_style = tab

[{.editorconfig,.gitignore,.gitattributes,Dockerfile,*.json}]
insert_final_newline = false
